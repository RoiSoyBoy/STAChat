    "test": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" test"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
