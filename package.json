{
  "name": "chatbot-platform-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for the chatbot platform",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
